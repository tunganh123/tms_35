<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("links.titles"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("links.home"), root_path %></li>
        <% if logged_in? %>
          <% if current_user.supervisor? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                User <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t("menus.create_new_user"), new_supervisor_user_path %>
                </li>
                <li>
                  <%= link_to t("menus.show_all_users"), supervisor_users_path %>
                </li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Course <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t("menus.create_new_user"), new_supervisor_course_path %>
                </li>
                <li>
                  <%= link_to t("menus.show_all_courses"), supervisor_courses_path %>
                </li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Subject <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t("menus.create_new_subject"), new_supervisor_subject_path %>
                </li>
                <li>
                  <%= link_to t("menus.show_all_subjects"), supervisor_subjects_path %>
                </li>
              </ul>
            </li>
          <% elsif %>
          <li>
            <%= link_to t("menus.show_all_courses"), user_assigned_courses_path(@current_user) %>
          </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("links.profile"), current_user %></li>
              <li><%= link_to t("links.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("links.log_out"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
         
        <% end %>
      </ul>
    </nav>
  </div>
</header>